<%= render "shared/error", obj: @user %>
<div class="box">
  <div class="box-inner">
   <%= form_for @user do |f| %>
   <h2>プロフィール </h2>
   <div class="box-name">
    <%= f.label :名前 %><br/>
    <%= f.text_field :name, autofocus: true %>
   </div>
   <div class="box-name">
    <%= f.label :紹介 %><br/>
    <%= f.text_field :introduce, autofocus: true %>
   </div>
   <div class="box-name"> 
      <%= f.label :image %><br/>
      <%= f.file_field :image %>
    </div>
   </div> 
   
   <div>
     <%= f.submit "登録"%>
   </div>
  <% end %>
  </div>
</div>