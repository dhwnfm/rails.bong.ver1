<h2>ルーム情報登録</h2>
<%= render "shared/error", obj: @room %>
<%= form_for @room do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"ルーム名" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :introduction ,"ルーム紹介" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
 
        <tr>
          <th><%= f.label :price ,"料金" %></th>
          <td><%= f.number_field :price, step: "1" %></td>
        </tr>
 
        <tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th><%= f.label :images ,"ルームイメージ" %></th>    
          <td><%= f.fields_for :images do |i| %>
               <%= i.file_field :image_url %>
           <% end %></td>
        </tr>    
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "登録"%></li>
        </ul>
      </div>
      
<% end %>